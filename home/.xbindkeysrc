"bright -2"
    Mod4 + minus

"bright +2"
    Mod4 + equal

"bright -2"
    XF86MonBrightnessDown

"bright +2"
    XF86MonBrightnessUp

"pactl set-sink-volume 0 +5%"
    XF86AudioRaiseVolume

"pactl set-sink-volume 0 -5%"
    XF86AudioLowerVolume

"kbdlight down"
    XF86KbdBrightnessDown

"kbdlight up"
    XF86KbdBrightnessUp

"pactl set-source-mute  $(pacmd list-sources | grep '\* index' | sed -r 's/  \* index: ([0-9])/\1/g') toggle"
    XF86AudioMicMute

"termite"
    Mod4 + Return

"~/.i3/lock.sh"
    Alt + Shift + l

"~/.i3/lock.sh & systemctl suspend"
    Mod4 + Alt + F4

"thunar"
    Shift + Mod4 + t

"rofi -show run"
    Mod4 + d

"rofi -show window"
    Mod4 + Tab

"maim -l -c 1,0,0,0.4 -s --format=png /dev/stdout | xclip -selection clipboard -target image/png"
    Print

"/bin/false"
    Control + Shift + Q


#
# keyboard
#

"setxkbmap en_US"
    Mod4 + Alt + F1

"setxkbmap hr"
    Mod4 + Alt + F2


#
# redshift
#

"~/scripts/redshift/redshift.sh -100"
    Control + Mod4 + minus

"~/scripts/redshift/redshift.sh +100"
    Control + Mod4 + plus

"~/scripts/redshift/redshift.sh 0"
    Control + Mod4 + 0

"~/scripts/redshift/redshift.sh 0 0.02"
    Control + Shift + Mod4 + plus

"~/scripts/redshift/redshift.sh 0 -0.02"
    Control + Shift + Mod4 + minus

#
# cmus
#

"cmus-remote --prev"
    Control + Mod4 + z

"cmus-remote --play"
    Control + Mod4 + x

"cmus-remote --pause"
    Control + Mod4 + c

"cmus-remote --stop"
    Control + Mod4 + v

"cmus-remote --next"
    Control + Mod4 + b

"cmus-remote --seek -5"
    Control + Mod4 + 3

"cmus-remote --seek +5"
    Control + Mod4 + 4

